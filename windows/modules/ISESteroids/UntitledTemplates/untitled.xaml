<Window
 xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
 xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
 Title='Enter Information'  
  MinWidth="500" MinHeight="240" Width="300" Height="200" >
<Grid HorizontalAlignment="Stretch" Margin='10,20,10,5'>
<Grid.RowDefinitions>
<RowDefinition Height="80" />
<RowDefinition Height="Auto" />
<RowDefinition Height="Auto" />
<RowDefinition Height="Auto" />
<RowDefinition Height="28" />
<RowDefinition Height="*" />

</Grid.RowDefinitions>
<Grid.ColumnDefinitions>
<ColumnDefinition Width="Auto" />
<ColumnDefinition Width="*" MinWidth="400" />
</Grid.ColumnDefinitions>


<Label Grid.Row="1" Grid.Column="0" Content="Name:"/>
<Label Grid.Row="2" Grid.Column="0" Content="Email:"/>
<Label Grid.Row="3" Grid.Column="0" Content="Nachricht:"/>
<TextBox Name='Name' Grid.Column="1" Grid.Row="1" Margin="3" />
<TextBox Name='Email' Grid.Column="1" Grid.Row="2" Margin="3" />
<TextBox Name='Nachricht' Grid.Column="1" Grid.Row="3" Margin="3" />
<Button Name='Button1' Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right"
MinWidth="80" Margin="3" Content="Senden" />
    </Grid>
</Window>